  }

  .btn-menu.active .bar:nth-child(2) {
    opacity: 0;
  }

  .btn-menu.active .bar:nth-child(3) {
    transform: rotate(45deg) translate(-7px, -7px); /* Ajusta la posición de la tercera barra */
    background-color: #fff;
  }
</style>

