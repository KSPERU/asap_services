  {# menu convertible #}
  .btn-menu {
    width: 40px;
    height: 40px;
    cursor: pointer;
    position: relative;
    background: none;
    border: none;
  }

  .bar {
    width: 100%;
    height: 4px;
    background-color: #000; /* Color de las barras del menú hamburguesa */
    margin: 6px 0;
    transition: transform 0.4s ease;
    border-radius: 8px;
  }

  .btn-menu.active .bar:nth-child(1) {
    transform: rotate(-45deg) translate(-7px, 7px); /* Ajusta la posición de la primera barra */
