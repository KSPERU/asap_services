{% extends 'base.html.twig' %}
{% block title %}
  Servicios disponibles
{% endblock %}

{% block stylesheets %}
  {{ encore_entry_link_tags('app') }}
  <link rel="stylesheet" href="{{ asset('css/cliente/showservicios.css') }}" />
{% endblock %}

{% block body %}
  <div class="container">
    {{ include("components/cabecera.html.twig") }}
    <div class="cliente-servicios-container">
      <h3 class="cliente-servicios-title">Â¿Que servicios deseas hoy?</h3>
      <div class="cliente-servicios-container-body" >
        {% for servicio in servicios %}
          <form method="post" action="{{ path('app_asap_services_entornos_cliente_ver_servicio', {'id': servicio.id}) }}"> 
            <div class="d-flex justify-content-center align-items-center mt-4">
              <button type="submit" class="cliente-servicios-item">
                <img src="{{ servicio.svimagen }}" style="width: 20%; border-radius: 50%;">
                <a class="cliente-servicios-item-text">{{ servicio.svnombre }}</a>
              </button>
            </div>
          </form>
        {% endfor %} 
      </div>
    </div>
    <p class="footer-text-asap mt-2">Asap Services</p>
  <div>
{% endblock %}