{% extends 'base.html.twig' %}

{% block title %}
  Invitar Amigo
{% endblock %}

{% block stylesheets %}
  {{ encore_entry_link_tags('app') }}
  <link rel="stylesheet" href="{{ asset('css/cliente/invitar_amigos_mensaje.css') }}" />
  <link rel="stylesheet" href="{{ asset('css/inicio/vistapc.css') }}" />
{% endblock %}

{% block body %}
<img class="imagepc" src="{{ asset('/image/Img_PC.png') }}" />
  <div class="imagen"> 
    <div class="container p-3">
      <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
          <div class="col-3 d-flex justify-content-center"></div>
          <div class="col-6 d-flex justify-content-center">
            <img src="{{ asset('image/casita_opt.png') }}" class="imagen-casita-opt" />
          </div>
          <div class="col-3 d-flex justify-content-center contboton-cerrar">
            <a href="{{ path('app_asap_services_entornos_cliente_inicio') }}">
              <svg xmlns="http://www.w3.org/2000/svg" height="25px" viewbox="0 0 384 512">
                <!-- ! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                <path d="M376.6 84.5c11.3-13.6 9.5-33.8-4.1-45.1s-33.8-9.5-45.1 4.1L192 206 56.6 43.5C45.3 29.9 25.1 28.1 11.5 39.4S-3.9 70.9 7.4 84.5L150.3 256 7.4 427.5c-11.3 13.6-9.5 33.8 4.1 45.1s33.8 9.5 45.1-4.1L192 306 327.4 468.5c11.3 13.6 31.5 15.4 45.1 4.1s15.4-31.5 4.1-45.1L233.7 256 376.6 84.5z" />
              </svg>
            </a>
          </div>
        </div>

        <div class="container p-0 rounded-5 contenido-invitar-amigo-mensaje-cliente">
          <div class="container scrool">
            <div class="row">
              <div class="col-11 contboton-enviar-invitacion-amigos text-end p-2">
                <button id="compartirBoton">Enviar</button>
              </div>
            </div>
            <div class="row barra-separacion"></div>

            <div class="row">
              <div class="col-12 p-3">
                <p id="texto-invitar-amigo" class="texto-invitar-amigo-mensaje-cliente">Usa mi código {{ codigo }} para conseguir un descuento del 30% de descuento en tu siguiente solicitud.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div> 

  <script>
    document.getElementById('compartirBoton').addEventListener('click', function () {
      // Obtener el texto del área de texto
      const texto = document.getElementById('texto-invitar-amigo').textContent;
    
      // Compartir el texto utilizando la API de Web Share si está disponible
      if (navigator.share) {
        navigator
          .share({
            title: 'Compartir',
            text: texto
          })
          .then(() => console.log('Contenido compartido'))
          .catch((error) => console.error('Error al compartir', error))
      } else {
        // Manejar el caso en el que la API no esté disponible
        alert('Lo siento, la función de compartir no está disponible en tu navegador.')
      }
    })
  </script>
  {{ include('components/footer.html.twig') }}
{% endblock %}
