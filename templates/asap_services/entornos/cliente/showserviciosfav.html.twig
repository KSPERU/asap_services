{% extends 'base.html.twig' %}
{% block title %}
	Servicios disponibles
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<link rel="stylesheet" href="{{ asset('css/cliente/showservicios.css') }}"/>
	<link rel="stylesheet" href="{{ asset('css/inicio/vistapc.css') }}"/>

{% endblock %}

{% block body %}<img class="imagepc" src="{{ asset('/image/Img_PC.png') }}">
	<style>
		.contboton-cerrar {
			font-size: 50px;
			font-weight: 700;
      height: 93px;
		}
		.contboton-cerrar a {
			color: #000;
			text-decoration: none;
		}
	</style>
	<div class="imagen">
		<div class="container p-3" data-turbo="false">
			<div class="row d-flex justify-content-center align-items-center">
				<div class="col-3 d-flex justify-content-center">
					<button class="btn-menu" id="btn-menu" onclick="openMenu()">
						<div class="bar"></div>
						<div class="bar"></div>
						<div class="bar"></div>
					</button>
				</div>
				<div class="col-6 d-flex justify-content-center">
					<img src="{{ asset('image/casita_opt.png') }}" style="width:100%">
				</div>
				<div class="col-3 d-flex justify-content-center contboton-cerrar">
					<a href="{{ path('app_asap_services_entornos_cliente_ajustes') }}"><svg xmlns="http://www.w3.org/2000/svg" height="25px" viewbox="0 0 384 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M376.6 84.5c11.3-13.6 9.5-33.8-4.1-45.1s-33.8-9.5-45.1 4.1L192 206 56.6 43.5C45.3 29.9 25.1 28.1 11.5 39.4S-3.9 70.9 7.4 84.5L150.3 256 7.4 427.5c-11.3 13.6-9.5 33.8 4.1 45.1s33.8 9.5 45.1-4.1L192 306 327.4 468.5c11.3 13.6 31.5 15.4 45.1 4.1s15.4-31.5 4.1-45.1L233.7 256 376.6 84.5z"/></svg></a>
				</div>
			</div>
			{# MENU #}
			<div id="menu-nav" class="menu-nav position-absolute top-0">
				<div class="menu-nav-header d-flex flex-column align-items-center justify-content-center my-4">
					{% if persona.pfoto %}
						<figure>
							<img src="{{ asset('img/' ~ persona.pfoto) }}" width="100px" height="100px">
						</figure>
					{% else %}
						<figure>
							<img src="{{ asset('image/perfil_cliente.png') }}">
						</figure>
					{% endif %}
					<h5>{{ persona.pnombre }}</h5>
					<h6>{{ persona.usuario.email }}</h6>
				</div>
				<div class="menu-nav-body px-4 py-1 text-center overflow-auto" style="max-height: calc(100% - 225px);">
					<h4>
						<a href="{{ path('app_asap_services_entornos_cliente_menu_hisorial_de_servicios') }}">Historial de servicios</a>
					</h4>
					<h4>
						<a href="{{ path('app_asap_services_entornos_cliente_menu_metodos_de_pago') }}">Métodos de pago</a>
					</h4>
					<h4>
						<a href="{{ path('app_asap_services_entornos_cliente_menu_saldos_pagos') }}">Saldos y pagos</a>
					</h4>
					<h4>
						<a href="{{ path('app_asap_services_entornos_cliente_menu_invitar') }}">Invitar amigos</a>
					</h4>
					<h4>
						<a href="{{ path('app_asap_services_entornos_cliente_menu_promociones') }}">Promociones y cupones</a>
					</h4>
					<h4>
						<a href="{{ path('app_asap_services_entornos_cliente_menu_calificacion') }}">Tú opinión importa</a>
					</h4>
					{# <h4><a href="{{ path('app_asap_services_entornos_cliente_menu_ayuda') }}">Ayuda</a></h4> #}
					<h4>
						<a href="{{ path('app_chat_conversacion') }}">Conversaciones</a>
					</h4>
				</div>
			</div>

			<script>
				const openMenu = () => {
const menuNav = document.getElementById("menu-nav");
const btnMenu = document.getElementById("btn-menu");
menuNav.classList.toggle("show");
btnMenu.classList.toggle("active");
}
			</script>
			<div class="cliente-servicios-container">
				<h3 class="cliente-servicios-title">Hola
					{{persona.pnombre}}
					{{persona.papellido}}
					Estos son tu top de servicios solicitados</h3>
				<div class="overflow-auto" style="max-height: calc(100vh - 150px);">
					{% for servicio in servicios %}
						{#
																								            <div class="d-flex justify-content-center align-items-center mt-4">
																								              <button type="submit" class="cliente-servicios-item">
																								                <img src="{{ servicio.svimagen }}" style="width: 20%; border-radius: 50%;">
																								                <a class="cliente-servicios-item-text">{{ servicio.svnombre }}</a>
																								              </button>
																								            </div>
																								            <form method="post" action="{{ path('app_asap_services_entornos_cliente_ver_servicio', {'id': servicio.id}) }}"></form>
																								          #}
						<div class="d-flex justify-content-center align-items-center mt-4 mb-3">
							<a href="{{ path('app_asap_services_entornos_cliente_ver_servicio', {'id': servicio.id}) }}" class="cliente-servicios-item d-flex align-items-center">
								<img src="{{servicio.svimagen}}" with="45" height="45" style="border-radius: 50%;">
								<span class="cliente-servicios-item-text">{{ servicio.svnombre }}</span>
							</a>
						</div>
					{% else %}
						<li>No tienes servicios favoritos</li>
					{% endfor %}
				</div>
			</div>
			{{ include('components/footer.html.twig') }}
		</div>
	</div>
{% endblock %}
