{% extends 'base.html.twig' %}

{% block title %}
	Proveedor - Biografia
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<link rel="stylesheet" href="{{ asset('css/proveedor/registro_biografia.css') }}"/>
	 	<link rel="stylesheet" href="{{ asset('css/inicio/vistapc.css') }}"/>
{% endblock %}

{% block body %}
	<style>
		.contboton-cerrar {
			font-size: 50px;
			font-weight: 700;
		}
		.contboton-cerrar a {
			color: #000;
			text-decoration: none;
		}
	</style>
	<img class="imagepc" src="{{ asset('/image/Img_PC.png') }}">
	<div class="imagen">
	<div class="container p-3 ">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-1"></div>
				<div class="col-8 d-flex justify-content-center">{{ include('components/logo_pequenio.html.twig') }}</div>
				<div class="col-1 contboton-cerrar d-flex justify-content-end">
					<a href="{{ path('app_asap_services_entornos_proveedor_inicio') }}">
						<svg xmlns="http://www.w3.org/2000/svg" height="0.5em" viewbox="0 0 384 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M376.6 84.5c11.3-13.6 9.5-33.8-4.1-45.1s-33.8-9.5-45.1 4.1L192 206 56.6 43.5C45.3 29.9 25.1 28.1 11.5 39.4S-3.9 70.9 7.4 84.5L150.3 256 7.4 427.5c-11.3 13.6-9.5 33.8 4.1 45.1s33.8 9.5 45.1-4.1L192 306 327.4 468.5c11.3 13.6 31.5 15.4 45.1 4.1s15.4-31.5 4.1-45.1L233.7 256 376.6 84.5z"/></svg>
					</a>
				</div>
			</div>

			<div class="container bg-light rounded-5 contenido-biografia-proveedor">
				<div class="container">
					<div class="row">
						<div class="col-12 titulo-biografia-proveedor">¡Bienvenido(a)
							{{persona.pnombre}}!</div>
					</div>
					<div class="row">
						<div class="col-12">
							<form method="post" action="{{ path('app_asap_services_entornos_proveedor_biografia', {'id': persona.id}) }}">
								<textarea class="texto-biografia-proveedor" name="p_biografia" id="p_biografia" cols="30" rows="5" style="width: 100%; font-size:14px; font-family:Nunito; font-weight:700; padding-top: 8px; padding-left: 8px;" placeholder="Agregar biografía">{{ persona.pbiografia }}</textarea>
								<div class="row contenido-boton-proveedor">
									<button type="submit" class="btn col-8 boton-biografia-proveedor">Detalles de servicio</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	</div>

	{{ include('components/footer.html.twig') }}
{% endblock %}
