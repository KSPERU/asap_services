{% extends 'base.html.twig' %}

{% block title %}Ganancias
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<link rel="stylesheet" href="{{ asset('css/proveedor/ganancias_1.css') }}"/>
	<link rel="stylesheet" href="{{ asset('css/inicio/vistapc.css') }}"/>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>
{% endblock %}

{% block body %}
	<img class="imagepc" src="{{ asset('/image/Img_PC.png') }}">
	<div class="imagen">
		<div class="container">
			<div class="row d-flex justify-content-center align-items-center">
				<div class="col-3 d-flex justify-content-center"></div>
				<div class="col-6 d-flex justify-content-center">
					<img src="{{ asset('image/casita_opt.png') }}" style="width:100%">
				</div>
				<div class="col-3 d-flex justify-content-center contboton-cerrar" style="margin-top: -55px;">
					<a href="{{path('app_asap_services_entornos_proveedor_inicio')}}">
						<svg xmlns="http://www.w3.org/2000/svg" height="25px" viewbox="0 0 384 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M376.6 84.5c11.3-13.6 9.5-33.8-4.1-45.1s-33.8-9.5-45.1 4.1L192 206 56.6 43.5C45.3 29.9 25.1 28.1 11.5 39.4S-3.9 70.9 7.4 84.5L150.3 256 7.4 427.5c-11.3 13.6-9.5 33.8 4.1 45.1s33.8 9.5 45.1-4.1L192 306 327.4 468.5c11.3 13.6 31.5 15.4 45.1 4.1s15.4-31.5 4.1-45.1L233.7 256 376.6 84.5z"/></svg>
					</a>
				</div>
				<div>

					<div class="container-morado">
						<div class="ganancias-texto">
							<div class="ganancias">Ganancias</div>
							<div class="datos">{{proveedor.pnombre}}
								{{proveedor.papellido}}</div>
							<div class="datos">Saldo:</div>
							<div class="datos">S/.
								{{gananciatotal}}</div>
							<div class="datos">Pago programado: Todos los lunes</div>
						</div>
					</div>
					<form method="post">
						<div class="container-ganancia">
							{% if serviciossincobro|length > 0 %}
							<div class="fecha">
								<div style="height: 150px; overflow: auto; overflow-x: hidden;">
								{% for servicio in serviciossincobro %}
									<div class="">{{ servicio.hsfecha|date('d/m/Y H:i') }}</div>
									<div class="ganancia-info">
										<div class="icon">
											<i class="fa-solid fa-plus"></i>
										</div>
										<div class="textos-1">
											<span class="nombre">{{ servicio.idcliente.pnombre }}
												{{ servicio.idcliente.papellido }}</span>
											<span class="servicio">{{ servicio.idservicio.svnombre }}</span>
										</div>
										<div class="textos-1">
											<span class="precio">S/{{ servicio.hsimporte }}</span>
										</div>
									</div>
									<hr>
								{% endfor %}
								<div class="row">
									<button type="submit" class="btn col-12 boton-ver-detalles">Ver detalles</button>								
								</div>
								</div>
							</div>				
							{% else %}
								<div class="container-ganancia">
									Sin registros
								</div>
							{% endif %}
						</div>
					</form>
				</div>
			</div>
		</div>

		{{ include("components/footer.html.twig") }}

	{% endblock %}
