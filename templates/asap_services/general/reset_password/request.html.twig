  <div class="container p-3">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-1"></div>
        <div class="col-8 d-flex justify-content-center">
           <img src="{{ asset('image/casita_opt.png') }}" style="width:100%">
        </div>
        <div class="col-1 contboton-cerrar d-flex justify-content-end">
          <a onclick="history.go(-1); return false;">
            <svg xmlns="http://www.w3.org/2000/svg" height="0.5em" viewBox="0 0 384 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M376.6 84.5c11.3-13.6 9.5-33.8-4.1-45.1s-33.8-9.5-45.1 4.1L192 206 56.6 43.5C45.3 29.9 25.1 28.1 11.5 39.4S-3.9 70.9 7.4 84.5L150.3 256 7.4 427.5c-11.3 13.6-9.5 33.8 4.1 45.1s33.8 9.5 45.1-4.1L192 306 327.4 468.5c11.3 13.6 31.5 15.4 45.1 4.1s15.4-31.5 4.1-45.1L233.7 256 376.6 84.5z"/></svg>
          </a>
        </div>
      </div>

      <div class="container bg-light rounded-5 contenido-recordar-password">
        <div class="container">
          <div class="row d-flex justify-content-center">
            <div class="col-12">
              <p class="titulo-recordar-password ">Recordar Contraseña</p>
              <p class="subtexto-recordar-password ">Ingrese su correo electronico y le enviaremos las instrucciones</p>
            </div>
          </div>
          {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
          {% endfor %}
          {{ form_start(requestForm) }}
            <div class="row d-flex justify-content-center ">
              <div class="col-12 row row-gap-3">
                <div class="input-group mb-3 mt-3">
                  {{ form_widget(requestForm.email, {'attr': {'class': 'input-field form-control', 'id': 'floatingInput', 'placeholder': ' '}}) }}
                  {{ form_label(requestForm.email, 'Correo Electrónico', {'label_attr': {'class': 'input-label texto-recordar-password'}, 'attr': {'for': 'floatingInput'}}) }}
                </div>
              </div>
            </div>
            <div class="row contenido-boton-recordar">
              <div class="col-10">
                <button type="submit" class="btn col-12 boton-recordar-password">Recordar</button>
              </div>
            </div>
            {{ form_widget(requestForm._token) }}
          {{ form_end(requestForm) }}
        </div>
      </div>
    </div>
  </div>

