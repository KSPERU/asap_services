{% extends 'base.html.twig' %}

{% block title %}
  Login
{% endblock %}

{% block stylesheets %}
  {{ encore_entry_link_tags('app') }}
  {# <link rel="stylesheet" href="{{ asset('css/login/login.css') }}" /> #}
{% endblock %}

{% block body %}
  <form method="post">
    {% if error %}
      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
      <div class="mb-3">
        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
      </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus />
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required />

    <a href="{{ path('app_forgot_password_request') }}">Recuperar contraseña</a>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

    <button class="btn btn-lg btn-primary" type="submit">Sign in</button>
  </form>
  <div class="container p-3">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-1"></div>
        <div class="col-10 d-flex justify-content-center">{{ include('components/logo_mediano.html.twig') }}</div>
        <div class="col-1"></div>
      </div>

      <div class="container bg-light rounded-5 contenido">
        <div class="container">
          <div class="container" style="padding-top: 10px;">
            <div class="row d-flex justify-content-center conten-login">
              <div class="col-6 opcion-login boton-opcion-login">
                <a href="">Iniciar sesion</a>
              </div>
              <div class="col-6 opcion-login">
                <a href="">Registrate</a>
              </div>
            </div>
          </div>
          <div class="row d-flex justify-content-center">
            <div class="col-12 titulo-login text-center">Bienvenido a Asap Services</div>
          </div>
          <div class="row">
            <div class="col-12 row row-gap-3">
              <div class="input-group mb-1">
                <input type="email" class="input-field" id="floatingInput" placeholder=" " />
                <label class="input-label texto-login" for="floatingInput">Correo Electrónico</label>
              </div>
              <div class="input-group mb-1">
                <input type="password" class="input-field" id="floatingInput" placeholder=" " />
                <label class="input-label texto-login" for="floatingInput">Contraseña</label>
              </div>
            </div>
          </div>
          <div class="row contenido-boton-login mt-3">
            <div class="col-10">
              <button type="button" class="btn col-12 boton-iniciar-login">Iniciar Sesion</button>
            </div>
          </div>
          <div class="row contenido-recupingre-login mt-3">
            <div class="col-10">
              <p class="texto-recupingre-login">
                <a href="">¿Olvidaste tu contraseña?</a>
              </p>
              <p class="texto-recupingre-login">O ingresa con:</p>
            </div>
          </div>
          <div class="row contenido-opciones-login mt-4">
            <div class="col-5">ds</div>
            <div class="col-5">ds</div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
